<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<h3>Comments<h3/>
<ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.id%> : <%= comment.body %></li>
  <% end %>
</ul>

<%= form_with(model: @comment, url: "/posts/#{@post.id}/comments", method: 'post', local: true) do |form| %>
  <%= form.text_field :body %>
  <%= form.submit %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
